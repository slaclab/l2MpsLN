    field(FLNK, "$(P):LC1_MODE")
}
record(calcout, "$(NAME):SET_CROSSBAR"){
    field(DESC, "Internal")
    field(SCAN, "Passive")
    field(INPA, "$(NAME):FACMODE")
    field(CALC, "!A ? 0 : 1")
    field(OUT, "$(TPR):TCRB:MODECTRL")
